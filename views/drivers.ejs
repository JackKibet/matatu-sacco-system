 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.saccoName %> - Drivers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .driver-photo { width: 60px; height: 60px; border-radius: 50%; object-fit: cover; }
  </style>
</head>
<body>
  <%- header %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Driver Management</h2>
      <a href="/drivers/new" class="btn btn-primary">Register New Driver</a>
    </div>
    
    <% if (typeof success !== 'undefined') { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    
    <% if (drivers.length > 0) { %>
      <div class="row">
        <% drivers.forEach(driver => { %>
          <div class="col-md-6 mb-4">
            <div class="card">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <img src="https://ui-avatars.com/api/?name=<%= driver.name %>&background=random" 
                       class="driver-photo me-3" alt="<%= driver.name %>">
                  <div>
                    <h5 class="card-title mb-1"><%= driver.name %></h5>
                    <p class="card-text text-muted mb-1">License: <%= driver.licenseNumber %></p>
                    <p class="card-text"><%= driver.phone %></p>
                  </div>
                </div>
                <div class="mt-3">
                  <a href="/drivers/<%= driver._id %>" class="btn btn-sm btn-info">Details</a>
                  <a href="/drivers/<%= driver._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="alert alert-info">
        No drivers registered yet. <a href="/drivers/new" class="alert-link">Register your first driver</a>
      </div>
    <% } %>
  </div>

  <%- footer %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>