 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.saccoName %> - Vehicles</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .vehicle-img { width: 80px; height: 60px; object-fit: cover; border-radius: 4px; }
  </style>
</head>
<body>
  <%- header %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Vehicle Management</h2>
      <a href="/vehicles/new" class="btn btn-primary">Add New Vehicle</a>
    </div>
    
    <% if (typeof success !== 'undefined') { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    
    <% if (vehicles.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Reg No.</th>
              <th>Make/Model</th>
              <th>Year</th>
              <th>Capacity</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% vehicles.forEach(vehicle => { %>
              <tr>
                <td><strong><%= vehicle.registrationNumber %></strong></td>
                <td><%= vehicle.make %> <%= vehicle.model %></td>
                <td><%= vehicle.year %></td>
                <td><%= vehicle.capacity %> seats</td>
                <td>
                  <a href="/vehicles/<%= vehicle._id %>" class="btn btn-sm btn-info">View</a>
                  <a href="/vehicles/<%= vehicle._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info">
        No vehicles registered yet. <a href="/vehicles/new" class="alert-link">Add your first vehicle</a>
      </div>
    <% } %>
  </div>

  <%- footer %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>