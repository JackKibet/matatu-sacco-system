 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.saccoName %> Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { padding-bottom: 60px; }
    .dashboard-card { transition: all 0.3s; }
    .dashboard-card:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.1); }
  </style>
</head>
<body>
  <%- header %>

  <div class="container mt-4">
    <h2 class="mb-4">Sacco Dashboard</h2>
    
    <div class="row">
      <div class="col-md-4 mb-4">
        <div class="card dashboard-card text-white bg-success">
          <div class="card-body">
            <h5 class="card-title">Total Vehicles</h5>
            <p class="display-4"><%= vehicles.length %></p>
            <a href="/vehicles" class="btn btn-light">Manage Vehicles</a>
          </div>
        </div>
      </div>
      
      <div class="col-md-4 mb-4">
        <div class="card dashboard-card text-white bg-info">
          <div class="card-body">
            <h5 class="card-title">Registered Drivers</h5>
            <p class="display-4"><%= drivers.length %></p>
            <a href="/drivers" class="btn btn-light">Manage Drivers</a>
          </div>
        </div>
      </div>
      
      <div class="col-md-4 mb-4">
        <div class="card dashboard-card text-white bg-warning">
          <div class="card-body">
            <h5 class="card-title">Quick Actions</h5>
            <div class="d-grid gap-2">
              <a href="/vehicles/new" class="btn btn-light">Add Vehicle</a>
              <a href="/drivers/new" class="btn btn-light">Add Driver</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="card mt-4">
      <div class="card-header">
        <h4>Recent Vehicles</h4>
      </div>
      <div class="card-body">
        <% if (vehicles.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Reg No.</th>
                  <th>Make/Model</th>
                  <th>Capacity</th>
                  <th>Year</th>
                </tr>
              </thead>
              <tbody>
                <% vehicles.slice(0, 5).forEach(vehicle => { %>
                  <tr>
                    <td><%= vehicle.registrationNumber %></td>
                    <td><%= vehicle.make %> <%= vehicle.model %></td>
                    <td><%= vehicle.capacity %> seats</td>
                    <td><%= vehicle.year %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-muted">No vehicles registered yet</p>
        <% } %>
      </div>
    </div>
  </div>

  <%- footer %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>